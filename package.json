{
  "name": "yuits",
  "version": "1.0.0",
  "description": "YuiBot TypeScript version",
  "main": "yui/yui.ts",
  "scripts": {
    "prebuild-win": "IF EXIST .\\dist rmdir /Q /S .\\dist && mkdir dist",
    "prebuild": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run prebuild && export NODE_ENV=build && tsc -p tsconfig.build.json && node dist/yui.js",
    "dev": "npm run prebuild && export NODE_ENV=development && tsc -p tsconfig.json && node dist/yui.js",
    "build": "npm run prebuild && tsc -p tsconfig.build.json",
    "build-docker": "tsc -p tsconfig.json",
    "start:dev": "export NODE_ENV=development && tsc-watch --onSuccess \"node dist/yui.js\"",
    "start:build": "export NODE_ENV=build && tsc-watch --onSuccess \"node dist/yui.js\"",
    "start:win": "npm run prebuild-win && set NODE_ENV=build && tsc -p tsconfig.json && node dist/yui.js",
    "cpyfiles": "copyfiles --up 2 --all yui/assets/**/* dist/assets",
    "pm2-service": "export NODE_ENV=build && pm2 start dist/yui.js",
    "lint": "eslint '*/**/*.{ts,tsx}' --quiet --fix"
  },
  "author": "Polaris",
  "license": "ISC",
  "dependencies": {
    "@discordjs/opus": "^0.3.3",
    "axios": "^0.19.2",
    "bili-api": "^1.6.0",
    "bufferutil": "^4.0.3",
    "chalk": "^4.1.0",
    "copyfiles": "^2.4.1",
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "erlpack": "github:discordapp/erlpack",
    "ffmpeg-static": "^4.2.5",
    "fs": "^0.0.1-security",
    "googleapis": "^81.0.0",
    "ioredis": "^4.27.6",
    "libsodium-wrappers": "^0.7.9",
    "log4js": "^6.1.2",
    "m3u8stream": "^0.7.1",
    "module-alias": "^2.2.2",
    "opusscript": "0.0.7",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "rimraf": "^3.0.2",
    "tslib": "^1.14.1",
    "utf-8-validate": "^5.0.4",
    "winston": "^3.3.3",
    "ytdl-core": "^4.9.0",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@types/ioredis": "^4.26.5",
    "@types/node": "^12.19.16",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.19.0",
    "node-gyp-build": "^4.2.2",
    "node-pre-gyp": "^0.14.0",
    "patch-package": "^6.2.2",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.3"
  },
  "_moduleAliases": {
    "@": "dist",
    "config-service": "dist/config-service"
  }
}
